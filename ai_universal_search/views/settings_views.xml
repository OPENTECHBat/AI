<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ai.search</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Standard Odoo 18.0 settings approach -->
            <xpath expr="." position="inside">
                <!-- app_settings_block for Odoo 18.0 -->
                <div class="app_settings_block" data-string="AI Universal Search" string="AI Universal Search" data-key="ai_universal_search">
                    <h2>AI Universal Search Settings</h2>
                    <!-- Version display for tracking changes -->
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Module Version</span>
                                <div class="text-muted">
                                    Current version: 0.3.2
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">OpenRouter API Key</span>
                                <div class="text-muted">
                                    Your API key for OpenRouter AI service.
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="openrouter_api_key" password="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">AI Model</span>
                                <div class="text-muted">
                                    Using Claude 3.7 Sonnet for query processing.
                                </div>
                                <div class="text-muted">
                                    <small>Model ID: anthropic/claude-3.7-sonnet</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_ai_search_configuration" model="ir.actions.act_window">
        <field name="name">AI Search Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'ai_universal_search'}</field>
    </record>

    <menuitem id="menu_ai_search_config" name="AI Search"
        parent="base.menu_administration" sequence="10"/>
    
    <menuitem id="menu_ai_search_settings" name="Settings"
        parent="menu_ai_search_config" action="action_ai_search_configuration" sequence="10"/>
</odoo>
